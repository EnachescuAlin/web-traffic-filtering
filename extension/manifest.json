{
    "description": "modify http traffic",
    "manifest_version": 2,
    "name": "web-traffic-filtering",
    "version": "1.0",
    "homepage_url": "https://github.com/EnachescuAlin/web-traffic-filtering",

    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "nativeMessaging",
      "<all_urls>"
    ],

    "background": {
        "scripts": [ "background.js" ]
    },

    "applications": {
        "gecko": {
            "id": "web-traffic-filtering@example.com",
            "strict_min_version": "57.0a1"
        }
    }
}